<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Message Board</title>
  </head>
  <body>
    <h1>Message Board</h1

      <% if(typeof(errors) != 'undefined' ) { %>
        <% for (var x in errors) { %>
          <h3><%= errors[x].message %></h3>
          <% } %>
     <% } %>

    <h2>Input Post Here:</h2>

      <form action="/post/new" method="post">
        Name:<input type="text" name='name'><br>
        Message: <textarea name='message' rows="1" cols="100" ></textarea><br>
        <input type="submit" value="Post Message">
      </form>

    <h2>Here are all the Post:</h2>
    <% for (var i = 0; i < posts.length; i++) { %>
      <h3>
        Name: <%= posts[i].name %>
        Message: <%= posts[i].message %>

      </h3>
          <% for (var j = 0; j < posts[i].comments.length; j++) { %>

            Name: <%= posts[i].comments[j].name %>
            Comment: <%= posts[i].comments[j].message %>

          <br>
          <% } %>
          <br>
          <form action="/comments/new/<%= posts[i]._id %>" method="post">
            Name: <input type="text" name='name'>
            Comment:<textarea name='message' rows="1" cols="100" ></textarea><br>
            <input type="submit" value="Post Comment">
          </form>
          <br>
    <% } %>
  </body>
</html>
